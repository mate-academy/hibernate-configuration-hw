<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property> <!-- DB Dialect -->
        <property name="connection.url">jdbc:mysql://localhost:3306/ticket_app?ServerTimeZone=UTC</property> <!-- BD Mane -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property> <!-- DB Driver -->
        <property name="connection.username">root</property> <!-- DB User -->
        <property name="connection.password">1111</property> <!-- DB Password -->
        <property name="show_sql">true</property> <!-- Show SQL in console -->
        <property name="hbm2ddl.auto">update</property> <!-- create / create-drop / update -->

        <mapping class="mate.academy.model.Movie"/>
    </session-factory>
</hibernate-configuration>